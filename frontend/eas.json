{
  "cli": {
    "version": ">= 5.9.1"
  },
  "build": {
    "development": {
      "android": {
        "image": "latest",
        "env": {
          "EXPO_USE_FAST_RESOLVER": "1",
          "NPM_CONFIG_LEGACY_PEER_DEPS": "true"
        }
      }
    },
    "preview": {
      "android": {
        "buildType": "apk",
        "distribution": "internal",
        "env": {
          "NPM_CONFIG_LEGACY_PEER_DEPS": "true",
          "NODE_ENV": "production"
        }
      }
    },
    "production": {
      "android": {
        "image": "latest",
        "env": {
          "NPM_CONFIG_LEGACY_PEER_DEPS": "true"
        }
      }
    }
  }
}